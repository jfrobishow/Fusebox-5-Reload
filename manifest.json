{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "2.0",
  "default_locale": "en",

  "description": "__MSG_extensionDescription__",

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
      "page": "/options/options.html",
      "browser_style": true
  },

  "permissions": [
    "menus",
    "activeTab",
    "tabs",
    "storage",
    "notifications"
  ],

  "icons": {
    "16": "icons/circuit-16.png",
    "32": "icons/circuit-32.png",
    "48": "icons/circuit-48.png"
  }
}
